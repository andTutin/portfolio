.about-me {
    min-height: 620px;
    color: #fff;
    
    &__container {
        grid-template-rows: 110px 1fr 150px;
    }

    &__left {
        grid-column: 3 / 6;
        grid-row: 2 / 3;
    }

    &__right {
        grid-column: 6 / 11;
        grid-row: 2 / 3;
        padding: 0 25px 0 50px;
    }

    &__hello {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 16px;
    }

    &__title {
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 30px;
    }

    &__text {
        font-size: 16px;
        line-height: 30px;
        font-weight: 600;
        margin-bottom: 90px;
    }

    &__ps {
        font-size: 16px;
        line-height: 30px;
        font-weight: 400;
        font-style: italic;
        position: relative;

        &:after {
            position: absolute;
            content: "*";
            top: 10px;
            left: -60px;
            font-size: 48px;
            color: #db0200;
            font-weight: 400;
            font-style: italic;
        }
    }
}