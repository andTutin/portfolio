.scrolldown-btn {
    display:flex;
    align-items: center;

    &__link {
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 18px;
        font-weight: 600;
        text-decoration: none;

        &:hover {
            transform: scale(1.1);
        }
    }

    &__icon {
        width: 30px;
        height: 30px;
        fill: #fff;
    }
}