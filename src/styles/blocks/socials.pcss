.socials {
    width: 100%;
    display: flex;

    &__list {
        width: 100%;
        display: flex;
        justify-content: space-between;
    }

    &__item {
        width : 52px;
        height: 52px;
        border-radius: 50%;
        border: 1px solid rgba(#fff, .3);

        &:hover {
            transform: scale(1.1);
            border: 1px solid rgba(#fff, 1);
            transition: .3s;
        }

        &:hover  .socials__icon {
            fill: #fff;
            transform: scale(1.1);
            transition: .3s;
        }
    }

    &__link {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    &__icon {
        width: 24px;
        height: 24px;
        fill: #534d5d;
    }
}