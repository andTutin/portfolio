.author {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;

    &__avatar {
        width: 75px;
        height: 75px;
        margin-right: 30px;
    }

    &__info {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }


    &__name {
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 10px;
    }

    &__business {
        font-size: 16px;
        font-weight: 600;
        opacity: .4;
    }
}