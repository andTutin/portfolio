    &__previews {
        position: absolute;
        bottom: 60px;
        right: 0;
        width: 710px;
        height: 100px;
        display: flex;

        @include desktop {
            width: 536px;
            bottom: 30px;
        }

        @include phones {
            display: none;
        }

        &-item {
            flex: 1;
            height: 100%;
            cursor: pointer;
        }
    }

    &__btns {
        position: absolute;
        left: 100%;
        bottom: 60px;
        width: 50px;
        height: 100px;
        display: flex;
        flex-direction: column;

        @include desktop {
            bottom: 30px;
        }

        @include phones {
            right: 0;
            left: auto;
            bottom: 0;
        }
    }

    &__next {
        flex: 1;
        background: #353e4e;

        &:hover &-icon {
            fill: #fff;
            transition: fill .3s;
        }

        &-icon {
            width: 20px;
            height: 20px;
            fill: #727883;
        }
    }

    &__prev {
        flex: 1;
        background: #353e4e;

        &:hover &-icon {
            fill: #fff;
            transition: fill .3s;
        }

        &-icon {
            fill: #727883;
            width: 20px;
            height: 20px;
            transform: rotate(180deg);
        }
    }
}