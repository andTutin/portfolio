.slider {
    width: 100%;
    position: relative;
    height: 100%;
    z-index: +10000;

    &:after {
        position: absolute;
        content: "2";
        top: 35px;
        left: 93%;
        font-size: 400px;
        line-height: 1;
        color: #e6e6e6;
        font-weight: 800;
        z-index: -110;

        @include desktop {
            top: -45px;
            left: 91%;
            font-size: 300px;
        }

        @include phones {
            display: none;
        }
    }

    &__fullsize {
        height: 100%;
    }

