.hamburger {
    width: 24px;
    height: 20px;
    flex-direction: column;
    justify-content: space-between;
    display: none;
    background: transparent;
    cursor: pointer;

    @include tablets {
        display: flex;
    }

    &__line {
        width: 100%;
        height: 4px;
        background: #fff;
        border-radius: 2px;
    }
}

