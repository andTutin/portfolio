.hero {
  background: url('../images/content/rockfest.png') center center no-repeat / cover;
  color: #fff;

  &__container {
    height: 100vh;
    @include grid-v(12, 30px);
    grid-template-rows: 150px 1fr 150px;
  }

  &__content {
    grid-row: 2 / 3;
    grid-column: 4 / 10;
    @include grid-v(6, 30px);
    grid-template-rows: 1fr auto 1fr;
  }

  &__btns {
    grid-column: 6 / 8;
    grid-row: 3 / 4;
    align-items: center;
    padding: 0 61px 0 54px;
  }
}
