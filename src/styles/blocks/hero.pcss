.hero {
  background: url('../images/content/rockfest.png') center center no-repeat / cover;
  color: #fff;
  padding: 51px 0;

  &__container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    
  }

  &__content {
    width: 647px;
  }

  &__btns {
    width: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
}
