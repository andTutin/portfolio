ul.skills__list#skills
    li.skills__item(v-for="cat in skills" :class="cat.category")
        h3.skills__item-title {{cat.category}}
        ul(:class= "cat.category + '__list'")
            li(v-for="item in cat.tech" :class= "cat.category +'__item'") 
                .skill(:class="'skill--' + item.title")   
                    svg(viewBox="0 0 200 200" preserveAspectRatio="none").skill__shape
                        circle(cx="100" cy="100" r="80" stroke="#e9e9e9" stroke-width="10" fill="#fff")
                        circle(cx="100" cy="100" r="80" stroke="#3965ea" stroke-width="20" :stroke-dasharray = "item.percent * 2 * 3.14 * 80 / 100 + ' 503'" fill="transparent" transform="rotate(-180 100 100)")
                    h4.skill__title {{item.title}}

